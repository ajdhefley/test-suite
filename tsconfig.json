{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": false,
        "target": "es2017",
        "module": "amd",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outFile": "dist/index.js",
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ]
  }